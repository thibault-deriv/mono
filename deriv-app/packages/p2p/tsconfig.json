{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "Assets/*": ["src/assets/*"],
            "Components/*": ["src/components/*"],
            "Constants/*": ["src/constants/*"],
            "Stores/*": ["src/stores/*"],
            "Translations/*": ["src/translations/*"],
            "Utils/*": ["src/utils/*"]
        },
        "outDir": "./lib",
        "rootDir": "./src"
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "globals.d.ts"]
}
